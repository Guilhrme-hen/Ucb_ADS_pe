#include<stdio.h>

int main (){
char nomes[4][50];
int i,j;
double salario[4][4],soma;

for(i = 0; i<4; i++ ){

		printf ("digite o nome funcionario %d: ", i+1);
		scanf ("%s", &nomes[i]);
}

	for(i = 0; i<4; i++ ){
		for(j = 0; j<4; j++ ){
			printf ("digite o valor do salario do funcionario ");
			scanf("%fl",&salario[i][j]);
}
}
for(i = 0; i<4; i++ ){
printf ("%s\t",nomes[i]);

}
for(i = 0; i<4; i++ ){
for(j = 0; j<4; j++ ){
printf ("%lf\t\n",salario[i][j]);

}
}
}
